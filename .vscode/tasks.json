{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Home Assistant",
            "type": "shell",
            "command": "bash .devcontainer/custom_component_helper",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Pytest",
            "type": "shell",
            "command": "pip3 install -r requirements.txt && pytest",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Upgrade Home Assistant",
            "type": "shell",
            "command": "python -m pip install --upgrade git+git://github.com/home-assistant/home-assistant.git@dev",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}